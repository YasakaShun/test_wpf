        <MediaElement Name="MediaElement1" Margin="0" UnloadedBehavior="Manual" LoadedBehavior="Manual" Source="D:\movie\sample\fish3.mp4"/>
        <Button x:Name="BtnPlay" Content="開始" HorizontalAlignment="Right" Margin="0,0,174,12" VerticalAlignment="Bottom" Width="75" Height="23" Opacity="0.4" Click="BtnPlay_Click"/>
